                                        <field name="item" attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="start_vol" attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="end_vol" attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="change_time" attrs="{'readonly' : [('editable','=',False)]}"/>
