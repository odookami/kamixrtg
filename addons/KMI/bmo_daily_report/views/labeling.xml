                                            <field name="group" invisible="1"/>
                                        </tree>
                                    </field>
                                </group>
                                <group>
                                    <field name="material_usage_note" class="oe_inline" required="0"/>
                                </group>
                            </page>
                            <page string="CATATAN PROSES PRODUKSI" name="incompatibility_note">
