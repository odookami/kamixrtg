                            <h1 class="oe_title">
                                <field name="name" required="1" placeholder="No. Dok"/>
                            </h1>
                        </div> 
                        <group>
                            <group>
                                <field name="okp_id" readonly="0"/>
                                <field name="release_date" readonly="1"/>
                                <!-- <field name="num_of_pages" required="0"/> -->
                                <field name="product_labeling_id" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                <field name="location_id" invisible='1'/>
                            </group>
                            <group>
                                <field name="operator" required="0" attrs="{'readonly' : [('editable','=',False)]}"/>
                                <field name="leader" required="0" attrs="{'readonly' : [('editable','=',False)]}"/>
                                <field name="revision" readonly='1'/>
                                <field name="model_id" invisible='1'/>
                                <field name="editable" invisible='1'/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="date" required="0" attrs="{'readonly' : [('editable','=',False)]}"/>
                                <field name="shift" required="0" attrs="{'readonly' : [('editable','=',False)]}"/>
                                <field name="packaging" required="0"/>
                            </group>
                            <group>
                                <field name="dayofweek" required="0"/>
                                <field name="team" required="0"/>
                                <field name="line_machine" required="0"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="GENERAL REPORT" name="general_report">
                                <group>
                                    <group>           
                                        <label for="preparation" string="Downtime"/>
										<div class="o_row" name="preparation">
											<field name="preparation" nolabel="1"/>
											<span> min</span>
										</div>
                                        <label for="total_breakdown"/>
                                        <div class="o_row" name="total_breakdown">
                                            <field name="total_breakdown" nolabel="1"/>
                                            <span> min</span>
                                        </div>
                                        <label for="running_hours"/>
                                        <div class="o_row" name="running_hours">
                                            <field name="running_hours" nolabel="1"/>
                                            <span> min</span>
                                        </div>
                                    </group>
                                    <group>
                                        <label for="total_output"/>
                                        <div class="o_row" name="total_output">
                                            <field name="total_output" nolabel="1"/>
                                            <span> btl</span>
                                        </div>                   
                                        <label for="total_reject_btl"/>
                                        <div class="o_row" name="total_reject_btl">
                                            <field name="total_reject_btl" nolabel="1"/>
                                            <span> btl</span>
                                        </div>
                                        <label for="total_reject_lbl"/>
                                        <div class="o_row" name="total_reject_lbl">
                                            <field name="total_reject_lbl" nolabel="1"/>
                                            <span> roll</span>
                                        </div>
                                    </group>
                                </group>
                                <separator string='General Report Line'/>
                                <field name="batch_line" nolabel="1">
                                    <tree editable="bottom" create="1">
                                        <field name="batch_number" readonly="0" force_save="1"/>
                                        <field name="product_id" readonly="0" force_save="1"/>
                                        <field name="start_coding" string='Start Actual'  widget="float_time" attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="end_coding" string='Finish Actual' widget="float_time" attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="output_batch" attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="reject_batch" attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <!-- <field name="prod_rec_created" invisible='1'/>
                                        <button name="insert_production_record" string="" class='btn-success rounded-pill' type="object" icon='fa-check' attrs="{'invisible' : [('prod_rec_created', '=', True)]}"/> -->
                                        <field name="editable" invisible='1'/>
                                    </tree>
                                </field>
                                <group>
                                    <field name="note_checks"/>
                                </group>
                            </page>
                            <page string='Verifikasi Coding Leher' name='verifikasi_coding_bodi'>
								<field name='verify_coding_line'>
									<tree editable='bottom' create="1">
										<field name="set_coding_by_qc" string="Setting Coding Leher" attrs="{'readonly' : [('editable','=',False)]}"/>
										<field name="actual_coding" string="Actual Coding Leher" widget='image' attrs="{'readonly' : [('editable','=',False)]}"/>
										<field name="pic_produksi" attrs="{'readonly' : [('editable','=',False)]}"/>
										<field name="jam_cetak_coding" widget="float_time" attrs="{'readonly' : [('editable','=',False)]}"/>
										<field name="pic_qc" attrs="{'readonly' : [('editable','=',False)]}"/>
										<field name="jam_verifikasi_coding" widget="float_time" attrs="{'readonly' : [('editable','=',False)]}"/>
										<field name="status_verifikasi" attrs="{'readonly' : [('editable','=',False)]}"/>

                                        <field name="editable" invisible='1'/>
									</tree>
								</field>
                                <group>
                                    <field name="note_vefiri_coding"/>
                                </group>
							</page>
                            <page string="GENERAL CHECKS (Early Shift Checks)" name="general_checks">
                                <field name="checks_line_1" nolabel="1" context="{'default_group' : '1'}">
                                    <tree editable="bottom" create="1">
                                        <!-- <field name="param_group" readonly="1" force_save="1" required="1" optional="hide"/> -->
                                        <field name="name" readonly="1" force_save="1" required="1"/>
                                        <field name="standard" readonly="1" force_save="1" required="1"/>
                                        <field name="actual" attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="matching" invisible='1'/>

                                        <field name="group" invisible="1"/>
                                        <field name="editable" invisible='1'/>
                                    </tree>
                                </field>
                                <separator/>
