                                                    <field name="ss_join" string="supplier Splice - Join" required="0"/>
                                                    <field name="ss_actual" string="supplier Splice - Actual" required="0"/>
                                                    <field name="kmi_slice" string="KAMI Splice" required="0"/>
                                                    <!-- <field name="conv_kg_roll" required="0"/> -->
                                                </group>
                                            </group>
                                        </form>
                                    </field>
                                </group>
