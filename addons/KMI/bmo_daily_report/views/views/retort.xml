<odoo>
  	<data>

		<record id="br_retort_view_tree" model="ir.ui.view">
            <field name="name">kmi.retort.view.tree</field>
            <field name="model">kmi.retort</field>
			<field name="priority" eval='1'/>
            <field name="arch" type="xml">
                <tree duplicate="0" delete="0" create="0">
                    <!-- Add your fields here -->
                    <field name="display_name"/>
					<field name="okp_id"/>
					<field name="product_id"/>
                    <field name="shift"/>
                    <field name="date"/>
                    <field name="revision"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
		
		<record id="br_retort_view_form" model="ir.ui.view">
			<field name="name">kmi.retort.retort.view.form</field>
			<field name="model">kmi.retort</field>
			<field name="priority" eval='1'/>
			<field name="arch" type="xml">
				<form string="Form Retort" create='1' delete='0' duplicate="1">
					<header>
						<!-- <button name="insert_production_record" string="Test Insert" type="object" context="{'batch_number' : 'A1'}"/> -->
                        <button name="action_submit" states="draft" string="Submit" type="object" class="oe_highlight"/>
                        <button name="action_done" states="in_progress" string="Release" type="object" class="oe_highlight"/>
                        <button name="action_leader_check" string="Leader Check" type="object" groups='bmo_mrp.group_mrp_leader' attrs="{'invisible' : [('leader_need_check', '=', False)]}" class="oe_highlight"/>
                        <!-- <button name="check_null_value" string="Check Null Value" type="object"/> -->
                        <button name="action_cancel" states="draft,in_progress" string="Cancel" type="object" class="oe_highlight"/>
                        <field name="leader_check" invisible='1'/>
                        <field name="leader_need_check" invisible='1'/>
                        <field name="state" widget="statusbar" 
                            statusbar_visible="draft,in_progress,done"/>
					</header>
					<sheet>
                        <widget name="web_ribbon" title="Checked" attrs="{'invisible': [('leader_check', '=', False)]}"/>
						<div class="oe_title">
							<h1>
                                <field name="name" required="0" readonly='1' placeholder="No. Dok"/>
							</h1>
						</div>
						<group>
							<group>
								<field name="release_date" readonly="1"/>
								<field name="okp_id" readonly="1"/>
                                <field name="no_urut_bo" readonly='1'/>
								<!-- <field name="num_of_pages"/> -->
							</group>
							<group>
								<field name="revision" required="0" readonly='1'/>
                                <field name="operator" required="1" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                <field name="leader" required="1" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
							</group>
						</group>
						<group>
							<group>
								<field name="dayofweek"/>
								<field name="date"/>
								<field name="shift"/>
							</group>
							<group>
								<field name="team"/>
								<field name="packaging"/>
							</group>
						</group>
						<notebook>
							<page string="General Report" name="general_report">
								<group>
									<group>
										<label for="preparation"/>
										<div class="o_row" name="preparation">
											<field name="preparation" nolabel="1"/>
											<span> min</span>
										</div>

										<label for="total_breakdown"/>
										<div class="o_row" name="total_breakdown">
											<field name="total_breakdown" nolabel="1"/>
											<span> min</span>
										</div>

										<label for="running_hours"/>
										<div class="o_row" name="running_hours">
											<field name="running_hours" nolabel="1"/>
											<span> min</span>
										</div>
									</group>
								</group>
								<separator string='General Report Line'/>
                                <field name="batch_line" nolabel="1">
                                    <tree editable="bottom" create="1">
                                        <field name="batch_number" readonly="0" force_save="1"/>
                                        <field name="product_id" readonly="0" force_save="1"/>
                                        <field name="start_coding" string='Start'  widget="float_time" />
                                        <field name="end_coding" string='Finish' widget="float_time"/>
                                        <!-- <field name="reject_batch"/> -->
                                        <field name="prod_rec_created" invisible='1'/>
                                        <button name="insert_production_record" string="" class='btn-success rounded-pill' type="object" icon='fa-check' attrs="{'invisible' : [('prod_rec_created', '=', True)]}"/>
										<field name="editable" invisible='1'/>
                                    </tree>
                                </field>
								<group>
									<field name="note_general"/>
								</group>
							</page>
                            <page string="GENERAL CHECKS (Early Shift Checks)" name="general_checks">
                                <field name="checks_line" nolabel="1">
                                    <tree editable="bottom" create="1">
                                        <!-- <field name="param_group" readonly="1" force_save="1" required="1" optional="hide"/>	 -->
                                        <field name="name" readonly="1" force_save="1" required="1"/>
                                        <field name="standard" readonly="1" force_save="1" required="1"/>
                                        <field name="actual"/>
                                        <field name="matching" invisible='1'/>
										<field name="editable" invisible='1'/>
                                    </tree>
                                </field>
                                <group>
                                    <field name="note_checks"/>
                                </group>
                            </page>
							<page string="PRODUCTION RECORD" name="prd_record">
                                <label for='batch_1' string='Batch No'/>
                                <h1>
                                    <field name="batch_1" readonly='0'/>
                                </h1>
                                <field name="prod_rec_1_line" nolabel="1" context="{'default_group' : '1'}">
                                    <tree editable='bottom' create="0" delete='0' >
                                        <field name="name" readonly='1'/>
                                        <field name="param_1"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="param_2"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="param_3"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="param_4"  attrs="{'readonly' : [('editable','=',False)]}"/>
