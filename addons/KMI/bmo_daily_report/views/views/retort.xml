                                    </tree>
                                </field>

                                <label for='batch_note_2' string='Notes'/>
                                <field name="batch_note_2"/>
                                <hr/>

                                <label for='batch_3' string='Batch No'/>
                                <h1>
                                    <field name="batch_3" readonly='0'/>
                                </h1>
                                <field name="prod_rec_3_line" nolabel="1" context="{'default_group' : '3'}">
                                    <tree editable='bottom' create="0" delete='0' >
                                        <field name="name" readonly='1'/>
                                        <field name="param_15"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="param_16"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="param_17"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="param_18"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="param_19"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="param_20"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="param_21"  attrs="{'readonly' : [('editable','=',False)]}"/>

                                        <field name="group" invisible="1"/>
                                        <field name="editable" invisible='1'/>
                                    </tree>
                                </field>

                                <label for='batch_note_3' string='Notes'/>
                                <field name="batch_note_3"/>
                                <hr/>
                                <label for='batch_4' string='Batch No'/>
                                <h1>
                                    <field name="batch_4" readonly='0'/>
                                </h1>
                                <field name="prod_rec_4_line" nolabel="1" context="{'default_group' : '4'}">
                                    <tree editable='bottom' create="0" delete='0' >
                                        <field name="name" readonly='1'/>
                                        <field name="param_22"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="param_23"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="param_24"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="param_25"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="param_26"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="param_27"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="param_28"  attrs="{'readonly' : [('editable','=',False)]}"/>

                                        <field name="group" invisible="1"/>
                                        <field name="editable" invisible='1'/>
                                    </tree>
                                </field>

                                <label for='batch_note_4' string='Notes'/>
                                <field name="batch_note_4"/>
                            </page>
							<page string="CATATAN PROSES PRODUKSI" name="incompatibility_note">
                                <group string="CATATAN KETIDAKSESUAIAN SELAMA PROSES PRODUKSI">
                                    <field name="incompatibility_line" nolabel="1">
                                        <tree editable="bottom" create="1">
                                            <field name="start" widget='float_time' required="1"/>
                                            <field name="finish" widget='float_time' required="0"/>
                                            <field name="total" widget='float_time' required="0"/>
                                            <field name="uraian_masalah" required="0"/>
                                            <field name="frekuensi" required="0"/>
                                            <field name="status" required="0"/>
                                            <field name="pic" required="1"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
						</notebook>
						<group>
                            <group string="Another Awesome Notes">
                                <field name="retort_note" nolabel="1" readonly="1" required="0"/>
                            </group>
                        </group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" groups="base.group_user"/>
						<field name="activity_ids"/>
						<field name="message_ids"/>
					</div>
				</form>
			</field>
		</record>

