<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data >
        <!-- Add you code here -->
        <record id="br_pack_view_tree" model="ir.ui.view">
            <field name="name">kmi.packing.view.tree</field>
            <field name="model">kmi.packing</field>
            <field name="arch" type="xml">
                <tree duplicate="0" delete="0" create="0">
                    <!-- Add your fields here -->
                    <field name="display_name"/>
					<field name="okp_id"/>
					<field name="product_id"/>
                    <field name="shift"/>
                    <field name="date"/>
                    <field name="revision"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- kmi.daily.report form view -->
        <record id="br_pack_view_form" model="ir.ui.view">
            <field name="name">kmi.packing.pack.view.form</field>
            <field name="model">kmi.packing</field>
            <field name="arch" type="xml">
                <form string="" create='1' delete='0' duplicate="1">
                    <header>
                        <!-- <button name="insert_production_record" string="Test Insert" type="object" context="{'batch_number' : 'A1'}"/> -->
                        <button name="action_submit" states="draft" string="Submit" type="object" class="oe_highlight"/>
                        <button name="action_done" states="in_progress" string="Release" type="object" class="oe_highlight"/>
                        <button name="action_leader_check" string="Leader Check" type="object" groups='bmo_mrp.group_mrp_leader' attrs="{'invisible' : [('leader_need_check', '=', False)]}" class="oe_highlight"/>
                        <!-- <button name="check_null_value" string="Check Null Value" type="object"/> -->
                        <button name="action_cancel" states="draft,in_progress" string="Cancel" type="object" class="oe_highlight"/>
                        <field name="leader_check" invisible='1'/>
                        <field name="leader_need_check" invisible='1'/>
                        <field name="state" widget="statusbar" 
                            statusbar_visible="draft,in_progress,done"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Checked" attrs="{'invisible': [('leader_check', '=', False)]}"/>
                        <div>
                            <h1 class="oe_title">
                                <field name="name" required="1" readonly="1" placeholder="No. Dok"/>
                            </h1>
                        </div> 
                        <group>
                            <group>
                                <field name="okp_id" readonly="0"/>
                                <field name="release_date" readonly="1"/>
                                <!-- <field name="num_of_pages" required="0"/> -->
								<field name="product_packing_id" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                <field name="location_id" invisible='1'/>
                            </group>
                            <group>
                                <field name="operator" required="1" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                <field name="leader" required="1" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                <field name="revision" readonly='1'/>
                                <field name="model_id" invisible='1'/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="date" required="1"/>
                                <field name="shift" required="0"/>
                                <field name="packaging" required="0"/>
                            </group>
                            <group>
                                <field name="dayofweek" required="0"/>
                                <field name="team" required="0"/>
                                <field name="line_machine" required="0"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="GENERAL REPORT" name="general_report">
                                <group>
                                    <group>
                                        <label for="preparation"/>
                                        <div class="o_row" name="preparation">
                                            <field name="preparation" nolabel="1"/>
                                            <span> min</span>
                                        </div>
                                        <label for="total_breakdown"/>
                                        <div class="o_row" name="total_breakdown">
                                            <field name="total_breakdown" nolabel="1"/>
                                            <span> min</span>
                                        </div>
                                        <label for="running_hours"/>
                                        <div class="o_row" name="running_hours">
                                            <field name="running_hours" nolabel="1"/>
                                            <span> min</span>
                                        </div>
                                    </group>
                                    <group>
                                        <label for="total_reject_produk"/>
                                        <div class="o_row" name="total_reject_produk">
                                            <field name="total_reject_produk" nolabel="1"/>
                                            <span> btl</span>
                                        </div>
                                        <label for="total_reject_carton"/>
                                        <div class="o_row" name="total_reject_carton">
                                            <field name="total_reject_carton" nolabel="1"/>
                                            <span> pcs</span>
                                        </div>
                                        <label for="total_output"/>
                                        <div class="o_row" name="total_output">
                                            <field name="total_output" nolabel="1"/>
                                            <span> btl</span>
                                        </div>
                                    </group>
                                </group>
                                <separator string='General Report Line'/>
                                <field name="batch_line" nolabel="1">
                                    <tree editable="bottom" create="1">
                                        <field name="batch_number" string='No Bo' readonly="0" force_save="1"/>
                                        <field name="product_id" string='Variant' readonly="0" force_save="1"/>
                                        <field name="start_coding" string='Start Actual'  widget="float_time" attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="end_coding" string='Finish Actual' widget="float_time" attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="start_pallet" string='Start Pallet' attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="end_pallet" string='Finish Pallet' attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="editable" invisible='1'/>
                                    </tree>
                                </field>
                                <group>
                                    <field name="note"/>
                                </group>
                            </page>
