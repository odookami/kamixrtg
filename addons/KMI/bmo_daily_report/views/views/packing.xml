        <record id="kmi_packing_filter_search" model="ir.ui.view">
            <field name="name">kmi.packing.filter.search</field>
            <field name="model">kmi.packing</field>
            <field name="arch" type="xml">
                <search string="Pasteur Lists">
                    <field name="okp_id"/>
                    <field name="name"/>
                    <!-- <field name="batch_id"/> -->
                    <field name="product_id"/>
                    <filter name="today" string="Today" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]" help="Draft Moves"/>
                    <filter name="in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]" help="In Progress"/>
                    <filter name="done" string="Done" domain="[('state', '=', 'done')]" help="Dumpings already release"/>
                    <separator/>
                    <!-- <filter name="late" string="Late" help="Deadline exceed or/and by the scheduled"
                        domain="[('state', 'in', ('draft', 'waiting', 'confirmed')), '|', ('date', '&lt;', current_date)"/>  -->
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="status" domain="[]" context="{'group_by': 'state'}"/>
                        <filter string="Date" name="date" domain="[]" context="{'group_by': 'date'}"/>
                        <filter string="Shift" name="shift" domain="[]" context="{'group_by': 'shift'}"/>
                        <filter string="Products" name="product" domain="[]" context="{'group_by': 'product_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- kmi.daily.report action window -->
        <record id="br_pack_action" model="ir.actions.act_window">
            <field name="name">Packing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kmi.packing</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Laporan Harian Packing (OBOL)
                </p><p>
                    Pembentukan dan Pengisian Form Laporan Harian Packing (OBOL).
                </p>
            </field>
            <field name="context">{'default_state': 'draft','search_default_today' : 1}</field>
            <field name="domain">[('state', 'not in', ['draft_model', 'model'])]</field>
        </record>

        <record id="br_pack_template_action" model="ir.actions.act_window">
            <field name="name">Template Packing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kmi.packing</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Template Packing (OBOL)
                </p><p>
                    Pembentukan dan Pengisian Form Template Packing
                </p>
            </field>
            <field name="context">{'default_state': 'draft_model'}</field>
            <field name="domain">[('state', 'in', ['draft_model', 'model'])]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('br_pack_view_template_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('br_pack_view_template_form')})]"/>
        </record>

