                                    </tree>
                                </field>
                                <group>
                                    <field name="note_checks"/>
                                </group>
                            </page>
                            <page string="MATERIAL USAGE" name="prod_record">
								<group string="">
									<field name="material_line" nolabel="1">
										<tree editable="bottom" create="1">
