								<field name='verify_coding_line'>
									<tree editable='bottom' create="1">
										<field name="set_coding_by_qc" string="Setting Coding Box" attrs="{'readonly' : [('editable','=',False)]}"/>
										<field name="actual_coding" string="Actual Coding Box" widget='image' attrs="{'readonly' : [('editable','=',False)]}"/>
										<field name="pic_produksi"  attrs="{'readonly' : [('editable','=',False)]}"/>
										<field name="jam_cetak_coding" widget="float_time" attrs="{'readonly' : [('editable','=',False)]}"/>
										<field name="pic_qc"  attrs="{'readonly' : [('editable','=',False)]}"/>
										<field name="jam_verifikasi_coding" widget="float_time" attrs="{'readonly' : [('editable','=',False)]}"/>
										<field name="status_verifikasi"  attrs="{'readonly' : [('editable','=',False)]}"/>

										<field name="editable" invisible='1'/>
									</tree>
								</field>
                                <group>
                                    <field name="note_vefiri_coding"/>
                                </group>
							</page>
