<odoo>
    <data noupdate="0">
        <!-- Add you code here -->

        <record model='ir.ui.view' id='br_loader_view_tree'>
            <field name='name'>br_loader_view.tree</field>
            <field name='model'>kmi.loader</field>
            <field name="priority" eval='1'/>
            <field name='arch' type='xml'>
                <tree string='description' create='1' delete='0'>
                    <field name='display_name'/>
                    <field name="okp_id"/>
                    <field name="product_id"/>
                    <field name="shift"/>
                    <field name='date'/>
                    <field name='revision'/>
                    <field name='state'/>
                </tree>
            </field>
        </record>
        
        <!-- Add you code here -->
        <!-- kmi.daily2.report form view -->
        <record id="br_loader_view_form" model="ir.ui.view">
            <field name="name">kmi.loader.view.form</field>
            <field name="model">kmi.loader</field>
            <field name="priority" eval='1'/>
            <field name="arch" type="xml">
                <form string="" create='1' delete='0' duplicate="1">
                    <header>
                        <!-- <button name="insert_production_record" string="Test Insert" type="object" context="{'batch_number' : 'A1'}"/> -->
                        <button name="action_submit" states="draft" string="Submit" type="object" class="oe_highlight"/>
                        <button name="action_done" states="in_progress" string="Release" type="object" class="oe_highlight"/>
                        <button name="action_leader_check" string="Leader Check" type="object" groups='bmo_mrp.group_mrp_leader' attrs="{'invisible' : [('leader_need_check', '=', False)]}" class="oe_highlight"/>
                        <!-- <button name="check_null_value" string="Check Null Value" type="object"/> -->
                        <button name="action_cancel" states="draft,in_progress" string="Cancel" type="object" class="oe_highlight"/>
                        <field name="leader_check" invisible='1'/>
                        <field name="leader_need_check" invisible='1'/>
                        <field name="state" widget="statusbar" 
                            statusbar_visible="draft,in_progress,done"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Checked" attrs="{'invisible': [('leader_check', '=', False)]}"/>
                        <div>
                            <h1 class="oe_title">
                                <field name="name" required="1" placeholder="No. Dok" readonly='1'/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                
                                <field name="okp_id" readonly='1'/>
                                <field name="product_id" readonly='1'/>
                                <field name="no_urut_bo" readonly='1'/>
                                <field name="release_date" readonly="1"/>
                                <!-- <field name="num_of_pages"/> -->
                            </group>
                            <group>
                                <field name="operator" required="1" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                <field name="leader" required="1" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                <field name="revision" readonly='1'/>
                                <field name="model_id" invisible='1'/>
                            </group>
                        </group>
                        <group string='PRODUCTION NOTES'>
                            <group>
                                <field name="date" required="1" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                <field name="dayofweek" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                <field name="shift" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                <field name="team" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                            </group>
                            <group>
                                <field name="packaging" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                <field name="line_machine" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="GENERAL REPORT" name="general_report">
                                <group>
                                    <group>
                                        <field name="preparation" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                        <field name="total_breakdown" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                    </group>
                                    <group>
                                        <field name="running_hours" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                        <field name="total_reject_produk" string='Total Reject' attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                    </group>
                                </group>
                                <separator string='General Report Line'/>
                                <field name="batch_line" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="batch_number"/>
                                        <field name="product_id"/>
                                        <field name="start_coding" string='Start Loading Actual'  widget="float_time"   attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="end_coding" string='Finish Loading Actual' widget="float_time"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name="reject_batch"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name='group' invisible='1'/>
                                        <field name="prod_rec_created" invisible='1'/>
                                        <button name="insert_production_record" string="" class='btn-success rounded-pill' type="object" icon='fa-check' attrs="{'invisible' : [('prod_rec_created', '=', True)]}"/>
                                        <field name="editable" invisible='1'/>
                                    </tree>
                                </field>
                                <group>
                                    <field name="note"/>
                                </group>
                            </page>
                            <page string="GENERAL CHECKS (Early Shift Checks)" name="general_checks">
                                <field name="checks_line" nolabel="1">
                                    <tree editable="bottom" create="1">
                                        <!-- <field name="param_group"  attrs="{'readonly' : [('editable','=',False)]}" readonly="1" force_save="1" required="1" optional="hide"/> -->
                                        <field name="name" readonly="1" force_save="1" required="1"/>
                                        <field name="standard" readonly="1" force_save="1" required="1"/>
                                        <field name="actual"  attrs="{'readonly' : [('editable','=',False)]}"/>
                                        <field name='matching' invisible='1'/>
                                        <field name='type_operation' invisible='1'/>
                                        <field name="editable" invisible='1'/>
                                    </tree>
                                </field>
                                <group>
                                    <group>
                                        <field name="run_production" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                        <field name="preparation_cls" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                    </group>
                                    <group>
                                        <field name="shuttle_car" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                        <field name="other" attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="note_checks"/>
                                </group>
                            </page> 
