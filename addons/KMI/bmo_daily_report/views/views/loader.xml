                    <field name="name"/>
                    <field name="release_date"/>
                    <field name="revision"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <!-- Add you code here -->
        <!-- kmi.daily2.report form view -->
        <record id="br_loader_view_template_form" model="ir.ui.view">
            <field name="name">kmi.loader.view.template.form</field>
            <field name="model">kmi.loader</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="action_approve_template" states="draft_model" string="Approve" type="object" class="oe_highlight"/>
                        <button name="action_draft_model" states="model" string="Revisi" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" 
                            statusbar_visible="draft_model,model"/>
                    </header>
                    <sheet>
                        <div>
                            <h1 class="oe_title">
                                <field name="name" required="1" placeholder="No. Dok"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="release_date" readonly="0"/>
                                <field name="revision" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="GENERAL CHECKS (Early Shift Checks)" name="general_checks">
                                <group>
                                    <field name="checks_line" nolabel="1">
                                        <tree editable="bottom" create="1">
                                            <!-- <field name="param_group"  attrs="{'readonly' : [('editable','=',False)]}" readonly="1" force_save="1" required="1" optional="hide"/> -->
                                            <field name="name" required="1"/>
                                            <field name="standard" required='1'/>
                                            <field name="type_operation"/>
                                        </tree>
                                    </field>
                                </group>
                            </page> 
                            <page string="PRODUCTION RECORD" name="prd_record">
                                <field name="prod_rec_line" nolabel="1">
                                    <tree create="1" editable='bottom'>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <group string="Another Awesome Notes">
                                <field name="another_note" nolabel="1" required="0"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="kmi_loader_filter_search" model="ir.ui.view">
            <field name="name">kmi.loader.filter.search</field>
            <field name="model">kmi.loader</field>
            <field name="arch" type="xml">
                <search string="Pasteur Lists">
                    <field name="okp_id"/>
                    <field name="name"/>
                    <!-- <field name="batch_id"/> -->
                    <field name="product_id"/>
                    <filter name="today" string="Today" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]" help="Draft Moves"/>
                    <filter name="in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]" help="In Progress"/>
                    <filter name="done" string="Done" domain="[('state', '=', 'done')]" help="Dumpings already release"/>
                    <separator/>
                    <!-- <filter name="late" string="Late" help="Deadline exceed or/and by the scheduled"
                        domain="[('state', 'in', ('draft', 'waiting', 'confirmed')), '|', ('date', '&lt;', current_date)"/>  -->
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="status" domain="[]" context="{'group_by': 'state'}"/>
                        <filter string="Date" name="date" domain="[]" context="{'group_by': 'date'}"/>
                        <filter string="Shift" name="shift" domain="[]" context="{'group_by': 'shift'}"/>
                        <filter string="Products" name="product" domain="[]" context="{'group_by': 'product_id'}"/>
                    </group>
                </search>
            </field>
        </record>

         <!-- kmi.daily2.report action window -->
        <record id="br_loader_action" model="ir.actions.act_window">
            <field name="name">Loader</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kmi.loader</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Loader
                </p><p>
                    Pembentukan dan Pengisian Form Laporan Harian Loader
                </p>
            </field>
            <field name="context">{'default_state': 'draft','search_default_today' : 1, 'search_default_product': 1}</field>
            <field name="domain">[('state', 'not in', ['draft_model', 'model'])]</field>
        </record>

        <record id="br_loader_template_action" model="ir.actions.act_window">
            <field name="name">Laporan Harian Loader (OBOL)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kmi.loader</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Loader
                </p><p>
                    Pembentukan dan Pengisian Template Form Laporan Harian Loader
                </p>
            </field>
            <field name="context">{'default_state': 'draft_model'}</field>
            <field name="domain">[('state', 'in', ['draft_model', 'model'])]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('br_loader_view_template_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('br_loader_view_template_form')})]"/>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="br_loader_menu_act" name="Loader" parent="daily_report_menu_categ" action="br_loader_action" sequence="3"/>
        <menuitem id="br_loader_template_menu" name="Loader" parent="bmo_batch_record.batch_record_template_main_menu" action="br_loader_template_action"/>
