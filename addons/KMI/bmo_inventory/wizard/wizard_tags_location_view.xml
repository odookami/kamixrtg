<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="form_wizard_tags_location" model="ir.ui.view">
        <field name="name">form.wizard.wizard.tags.location</field>
        <field name="model">wizard.tags.location</field>
        <field name="arch" type="xml">
            <form string="Tags Location">
                <field name="move_ids" invisible="1"/>
                <field name="product_id" invisible="1"/>
                <field name="location_id" invisible="1"/>
                <field name="stock_quant_ids">
                    <tree create='0' delete='0' edit='0' export_xlsx='0'>
                        <field name='product_id'/>
                        <field name="location_id"/>
                        <field name="lot_id"/>
                        <field name="expiration_date" />
                        <field name="quantity"/>
                        <field name="available_quantity" optional="show"/>
                        <field name="product_uom_id"/>
                    </tree>
                </field>
                <field name="wizard_line">
                    <tree editable="bottom">
                        <field name="stock_quant_id" options="{'no_edit' : True,'no_create' : True,'no_open' : True}" required="1"/>
                        <field name="location_id" />
                        <field name="package_id" />
                        <field name="available_quantity" />
                        <field name="uom_id" />
                        <field name="lot_id" />
                        <field name="qty_done" />
                    </tree>
                </field>
                <footer>
                    <button string="Add" name="add_data" type="object" class="btn-primary"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_wizard_tags_location" model="ir.actions.act_window">
        <field name="name">Tags Location</field>
        <field name="res_model">wizard.tags.location</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field name='context'> {'no_breadcrumbs': True, 'no_control_panel' : True}</field>
    </record>

</odoo>
