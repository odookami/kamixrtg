<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        <!-- model.name inherit form view -->
        <record id="view_inventory_form_inherit_bmo_invenrory" model="ir.ui.view">
            <field name="name">stock.inventory.form.inherit.bmo.inventory</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_open_inventory_lines']" position="attributes">
                    <attribute name="states">confirm,approve</attribute>
                </xpath>

                <xpath expr="//button[@name='action_validate']" position="replace"/>
                <xpath expr="//button[@name='action_validate']" position="replace">
                    <button name="action_cancel_draft" states="approve" string="Set to Draft" type="object"/>
                    <button name="action_approve" 
                        string="Confirm Inventory" type="object" 
                        attrs="{'invisible': [('state', '!=', 'confirm')]}" class="oe_highlight"  groups="bmo_inventory.group_inventory_adjustment_user"/>
                    
                    <button name="action_validate" 
                        string="Validate Inventory" type="object" 
                        attrs="{'invisible': [('state', '!=', 'approve')]}" 
                        class="oe_highlight" groups="bmo_inventory.group_inventory_adjustments_manager"/>
                </xpath>

                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">draft,confirm,approve,done</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_inventory_form_inherit_bmo_inventory" model="ir.ui.view">
            <field name="name">stock.inventory.form.inherit.bmo.inventory</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock_account.view_inventory_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='accounting_date']" position="after">
                    <field name="gain_or_loss" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                </xpath>
            </field>
        </record>
        <record id="stock_inventory_line_tree_inherit_bmo_inventory" model="ir.ui.view">
            <field name="name">stock.inventory.line.form.inherit.bmo.inventory</field>
            <field name="model">stock.inventory.line</field>
            <field name="inherit_id" ref="stock.stock_inventory_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree[1]" position="attributes">
                    <attribute name="js_class"></attribute>
                </xpath>
            </field>
        </record>
        <menuitem action="stock.action_inventory_form" id="stock.menu_action_inventory_form" parent="stock.menu_stock_warehouse_mgmt" sequence="30" groups="bmo_inventory.group_inventory_adjustment_user"/>
        
    </data>
</odoo>