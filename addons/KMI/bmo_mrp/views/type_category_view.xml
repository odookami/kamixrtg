<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="type_category_view_tree" model="ir.ui.view">
        <field name="name">type.category.view.tree</field>
        <field name="model">type.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="type_category_view_form" model="ir.ui.view">
        <field name="name">type.category.view.form</field>
        <field name="model">type.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="type_category_action" model="ir.actions.act_window">
        <field name="name">Type Category</field>
        <field name="res_model">type.category</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="menu_type_category" name="Type Category" parent="mrp.menu_mrp_configuration" sequence="50" action="type_category_action" groups="base.user_root"/>
</odoo>
