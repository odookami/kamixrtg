<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="wizard_revisi_view" model="ir.ui.view">
            <field name="name">wizard.revisi.budget.set.draft.view</field>
            <field name="model">wizard.revisi</field>
            <field name="arch" type="xml">
                <form string="Set To Draft with reason">
                    <group>
                        <field name="employee_id" invisible="1"/>
                        <field name="data_revisi_id" widget="selection"/>
                        <field name="description_reason"/>
                    </group>
                    <footer>
                        <button string='Update' name="revisi_bom" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_revisi" model="ir.actions.act_window">
            <field name="name">Revisi</field>
            <field name="res_model">wizard.revisi</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
