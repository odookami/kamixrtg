                                <field name="first_check_count"
                                    attrs="{'readonly': [('state', '!=', 'in_progress')]}"/>
                            </group>
                            <!-- <group string="Pengecekan tengah (menit ke-8)"
                                attrs="{'invisible': [('packing_type', '!=', 'Filling')]}">
                                <field name="middle_check_code"
                                    attrs="{'readonly': [('state', '!=', 'in_progress')]}"/>
                                <field name="middle_check_time" widget="mask" data-inputmask="'alias': 'hh:mm'"
                                    attrs="{'readonly': [('state', '!=', 'in_progress')]}"/>
                                <field name="middle_check_count"
                                    attrs="{'readonly': [('state', '!=', 'in_progress')]}"/>
                            </group> -->
                            <group>
                                <label for="qty_in_ct" string="Quantity"
                                    attrs="{'invisible': [('packing_type', '!=', 'Filling')]}"/>
                                <div class="o_row" attrs="{'invisible': [('packing_type', '!=', 'Filling')]}">
                                    <field name="qty_in_ct" class="oe_inline" 
                                        attrs="{'required': [('packing_type', '=', 'Filling')], 
