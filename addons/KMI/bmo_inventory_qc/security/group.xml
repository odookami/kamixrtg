<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate='1'>

    	<record model="ir.module.category" id="module_category_ppic">
            <field name="name">PPIC</field>
            <field name="sequence">60</field>
        </record>

        <record model="ir.module.category" id="module_category_quality_control">
            <field name="name">Quality Control</field>
            <field name="sequence">60</field>
        </record>

        <record id="group_warehouse" model="res.groups">
            <field name="name">Warehouse</field>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>

    	<record id="group_ppic_user" model="res.groups">
            <field name="name">PPIC User</field>
            <field name="category_id" ref="module_category_ppic"/>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>

        <record id="group_ppic_manager" model="res.groups">
            <field name="name">PPIC Manager</field>
            <field name="category_id" ref="module_category_ppic"/>
            <field name="implied_ids" eval="[(4, ref('group_ppic_user')),(4, ref('stock.group_stock_manager'))]"/>

            <field name="users" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <record id="group_quality_control_user" model="res.groups">
            <field name="name">Quality Control User</field>
            <field name="category_id" ref="module_category_quality_control"/>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>

        <record id="group_quality_control_manager" model="res.groups">
            <field name="name">Quality Control Manager</field>
            <field name="category_id" ref="module_category_quality_control"/>
            <field name="implied_ids" eval="[(4, ref('group_quality_control_user')),(4, ref('stock.group_stock_manager'))]"/>
            <field name="users" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <!-- =====================Other======================== -->
        <record id="button_cancel" model="res.groups">
            <field name="name">Button Cancel </field>
        </record>

    </data>
</odoo>
