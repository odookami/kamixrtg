<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        <!-- Add you code here -->
        <record id="mrp_material_usage_report_form" model="ir.ui.view">
            <field name="name">mrp_material_usage_report_form</field>
            <field name="model">mrp.material.usage</field>
            <field name="arch" type="xml">
                <form string="Material Usage Report">
                    <group>
                        <group>
                            <label for="date_from" string="Periode"/>
                            <div class="o_row">
                                <field name="date_from" class="oe_inline" required="1"/> - 
                                <field name="date_to" class="oe_inline" required="1"/>
                            </div>
                            <field name="state" class="font-weight-bold" required="1"/>
                        </group>
                        <group>
                            <field name="report_type" class="font-weight-bold" required="1"/>
                        </group>
                    </group>
                    <group invisible="0">
                        <field name="name" invisible="1"/>
                        <field name="data_file" widget="binary" readonly="1" filename="name"/>
                    </group> 
                    <footer>
                        <button name="action_export" string="Export" type="object" class="btn-primary"/>
                        <button string="Close" class="btn-warning oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="mrp_material_usage_report_action" model="ir.actions.act_window">
            <field name="name">Export Material Usage Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.material.usage</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="mrp_material_usage_report_action" 
            id="mrp_material_usage_report_menu" sequence="99" 
            name="Material Usage" parent="mrp.menu_mrp_reporting"/>

    </data>
</odoo>