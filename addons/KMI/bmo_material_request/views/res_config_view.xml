<odoo>
    <data noupdate="0">
        <record id="view_material_config_settings" model="ir.ui.view">
            <field name="name">Setting budget</field>
            <field name="model">material.settings</field>
            <field name="arch" type="xml">
                <form string="Configure" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <field name="company_id" options="{'no_create': True}" invisible='1'/>
                    <group col="4">
                        <group string="Default">
                            <label for="users_ids"/>
                            <div>
                                <field name="users_ids" class="oe_inline" widget="many2many_tags" readonly='0'/>
                            </div>
                            <label for="product_amf_ids"/>
                            <div>
                                <field name="product_amf_ids" widget="many2many_tags" class="oe_inline" readonly='0'/>
                            </div>
                            <label for="product_product_ids"/>
                            <div>
                                <field name="product_product_ids" widget="many2many_tags" class="oe_inline" readonly='0'/>
                            </div>
                        </group>
                    </group>
                    <div>
                        <span>(*) This configuration is related to the company you're logged into.</span>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_material_settings" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">material.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
    </data>
</odoo>