<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="report_material_request">
        <t t-call="web.html_container">
            <t t-call="bmo_material_request.my_own_layout">
                <t t-call="web.internal_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <style>
                                .info{
                                    padding-top:-50px;
                                }
                                table > tr > th{
                                    padding-top:-30px; 
                                    padding-bottom:-10px;
                                }
                                table > tr > td{
                                    padding-top:-30px; 
                                    padding-bottom:-10px;
                                }
                                <!-- table.table-no-border { 
                                    page-break-inside: avoid;
                                    border-collapse: collapse; 
                                    margin-top: -10px; width: 100%;
                                    table-layout: fixed; font-size: 13px; 
                                    border: 1px solid #e7ebee;
                                }
                                table.table-bordered { 
                                    border-collapse: collapse; 
                                    margin-top: 10px; width: 100%;
                                    table-layout: auto;
                                }
                                table.table-sm {
                                    table-layout: fixed; font-size: 13px; 
                                }
                                .content-box{width:850px ; margin: 0 auto; padding-top:10px; padding-bottom:20px;} -->
                            </style>
                            <div class="row" id="info" >
                                <div class="col-12">
                                    <table class="table table-sm">
                                        <h3 class="text-left" style="font-size: 12px;">
                                            <strong>
                                                <p><span t-esc="o.env.user.company_id.name"/></p>
                                            </strong>
                                        </h3>
                                    </table>
                                </div>
                            </div>
                            <div class="row" style="text-align: center;">
                                <div class="col-12">
                                    <table class="table table-sm" >
                                        <h2 style="font-size: 22px;">
                                            <strong>
                                                <p>BUKTI KIRIM BARANG</p>
                                            </strong>
                                            <strong>
                                                <p>ORDER KERJA PRODUKSI(BKB-OKP)</p>
                                            </strong>
                                        </h2>
                                    </table>
                                </div>
                            </div>
                            <t t-foreach="o.batch_production_id" t-as="a">
                                <div class="row" style="font-size: 14px;">
                                    <div class="col-6" style='width:50%; display:flex; '>
                                        <table class="content-box" style="text-align: left !important;">
                                            <tr>
                                                <td class='text-left' style='width: 13%'>No. OKP</td>
                                                <td class='text-center' style='width: 5%'> : </td>
                                                <td style='width: 40%'>
                                                    <span t-esc="a.okp_id.name"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='text-left' style='width: 13%'>No.OKP Ref</td>
                                                <td class='text-center' style='width: 5%'> : </td>
                                                <td style='width: 40%'>
                                                    <span t-esc="a.reference"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='text-left' style='width: 13%'>Formula</td>
                                                <td class='text-center' style='width: 5%'> : </td>
                                                <td style='width: 40%'>
                                                    <span t-esc="a.bom_id.product_tmpl_id.name"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='text-left' style='width: 13%'>Batch Proses</td>
                                                <td class='text-center' style='width: 5%'> : </td>
                                                <td style='width: 40%'>
                                                    <span t-esc="a.batch_proses"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-6" style='width:50%; display:flex; '>
                                        <table class="content-box" style="text-align: left !important;">
                                            <tr>
                                                <th style='width: 16%'></th>
                                                <td class='text-left' style='width: 13%'>Tgl. OKP</td>
                                                <td class='text-center' style='width: 5%'> : </td>
                                                <td >
                                                    <span t-esc="a.date_okp"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th style='width: 16%'></th>
                                                <td class='text-left' style='width: 13%'>Type OKP</td>
                                                <td class='text-center' style='width: 5%'> : </td>
                                                <td style='width: 40%'>
                                                    <span t-esc="a.tipe"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th style='width: 16%'></th>
                                                <td class='text-left' style='width: 13%'>Version</td>
                                                <td class='text-center' style='width: 5%'> : </td>
                                                <td >
                                                    <span t-esc="a.bom_id.version"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </t>
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-sm">
                                        <thead style="font-size: 14px;">
                                            <tr>
                                                <th scope="col">No</th>
                                                <th scope="col">Item Code</th>
                                                <th colspan="4">Item Description</th>
                                                <th scope="col">UOM</th>
                                            </tr>
                                        </thead>
                                        <tbody style="font-size: 12px;">
                                            <t t-set='no' t-value='1'/>
                                            <t t-foreach="o.move_ids_without_package.sorted(lambda r: r.product_id.name)" t-as="line">
                                                <t t-foreach="line[0]" t-as="a">
                                                <t t-set='total_qty' t-value='0'/>
                                                    <tr>
                                                        <td class='text-center'>
                                                            <span t-esc='no'/>
                                                        </td>
                                                        <td class='text-left'>
                                                            <t t-esc="line.product_id.default_code"/>
                                                        </td>
                                                        <td class='text-left' colspan="4">
                                                            <t t-esc="line.product_id.name"/>
                                                        </td>
                                                        <td class='text-left'>
                                                            <t t-esc="line.product_id.uom_id.name"/>
                                                        </td>
                                                    </tr>
                                                    <t t-set='no' t-value='no + 1'/>
                                                    <t t-foreach="line.move_line_ids" t-as="move_line">
                                                        <tr>
                                                            <td class='text-center'>
                                                            </td>
                                                            <td class='text-center'>
                                                            </td>
                                                            <td class='text-left'>
                                                                <t t-esc="move_line.location_id.display_name"/>
                                                            </td>
                                                            <td class='text-left'>
                                                                <t t-esc="move_line.lot_id.name"/>
                                                            </td>
                                                            <td class='text-left'>
                                                                <t t-if="move_line.expired_date">
                                                                    <b><span t-esc="(datetime.datetime.strptime(str(move_line.expired_date), '%Y-%m-%d %H:%M:%S')+datetime.timedelta(hours=7)).strftime('%d-%b-%Y ')" /></b>
                                                                    <!-- <b><span t-esc="move_line.expired_date.strftime('%d-%b-%Y')"/></b> -->
                                                                </t>
                                                            </td>
                                                            <td class='text-left'>
                                                                <t t-esc="move_line.qty_done" t-options='{"widget": "float", "precision": 3}'/>
                                                            </td>
                                                            <td class='text-left'>
                                                                <!-- <t t-esc="move_line.product_uom_id.name"/> -->
                                                            </td>
                                                        </tr>
                                                        <t t-set='total_qty' t-value='total_qty + move_line.qty_done'/>
                                                    </t>
                                                    <tr>
                                                        <td class='text-center' colspan="5">
                                                        </td>
                                                        <td class='text-left'>
                                                            <span t-esc="total_qty" t-options='{"widget": "float", "precision": 3}'/>
                                                        </td>
                                                        <td class='text-left'>
                                                            <!-- <t t-esc="line.product_uom.name"/> -->
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>    
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-bordered" style="page-break-before: avoid; font-size: 14px;">
                                        <tr style="border:1px;">
                                            <td style="text-align:center;">Dibuat Oleh</td>
                                            <td style="text-align:center;">Disetujui Oleh</td>
                                            <td style="text-align:center;">Disetujui Oleh</td>
                                            <td style="text-align:center;">Diterima Oleh</td>
                                        </tr>
                                        <tr style='height:50px;'>
                                            <td style="border:1px;vertical-align:bottom;font-family:arial;"></td>
                                            <td style="border:1px;vertical-align:bottom;font-family:arial;"></td>
                                            <td style="border:1px;vertical-align:bottom;font-family:arial;"></td>
                                            <td style="border:1px;vertical-align:bottom;font-family:arial;"></td>
                                        </tr>
                                        <tr>
                                            <td style="text-align:center;">Admin Gudang</td>
                                            <td style="text-align:center;">Saff Gudang</td>
                                            <td style="text-align:center;">Leader Gudang</td>
                                            <td style="text-align:center;">Produksi</td>
                                        </tr>
                                    </table>
                                    <table style="font-size: 14px;">
                                        <tr>
                                            <th style="width: 10%;">Printed by</th>
                                            <th style="width: 5%;">:</th> 
                                            <th style="width: 10%;"><span t-esc="o.env.user.name"/></th>
                                            <th style="width: 10%;">Tanggal</th>
                                            <th style="width: 5%;">:</th>
                                            <th style="width: 10%;"><span t-esc="o.date.strftime('%d-%b-%Y')"/></th>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>