<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    	<record model="ir.ui.view" id="sale_order_oracle_integration_form">
    	    <field name="name">sale_order_oracle_integration.form</field>
    	    <field name="model">sale.order</field>
    	    <field name="inherit_id" ref='sale.view_order_form'/>
    	    <field name="arch" type="xml">
    	    	<!-- <field name='payment_term_id' position='after'>
    	    		<field name='transaction_type_id' widget='selection' required='1'/>
    	    	</field> -->
    	    	<field name='payment_term_id' position='attributes'>
    	    		<attribute name='widget'>selection</attribute>
    	    		<attribute name='required'>1</attribute>
    	    	</field>

                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="date_delivery" readonly="0"/>
                </xpath>
                
                <header position='inside'>
                    <button name="post_invoice_to_oracle"  confirm="Apakah Semua Data Sudah Sesuai?" class='oe_highlight' string="Post" type="object" attrs="{'invisible' : [('need_integration', '=', False)]}"/>
                    <field name="need_integration" invisible='1'/>
                    <field name="sent_oracle" invisible='1'/>
                </header>

                <button name='%(sale.action_view_sale_advance_payment_inv)d' position='attributes'>
                    <attribute name='invisible'>True</attribute>
                </button>

                <xpath expr="//header/button[4]" position='attributes'>
                    <attribute name='invisible'>True</attribute>
                </xpath>

                <xpath expr="//div[hasclass('oe_button_box')]" position='after'>
                    <widget name="web_ribbon" title="Sent" attrs="{'invisible' : [('sent_oracle', '=', False)]}" />
                </xpath>
    	    </field>
    	</record>
    </data>
</odoo>
