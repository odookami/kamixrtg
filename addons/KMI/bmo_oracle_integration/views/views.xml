<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    	<record model='ir.ui.view' id='account_payment_terms_grab_from_oracle_form'>
    	    <field name='name'>account_payment_terms_grab_from_oracle.form</field>
    	    <field name='model'>account.payment.term</field>
    	    <field name="inherit_id" ref='account.view_payment_term_form'/>
    	    <field name='arch' type='xml'>
    	        <xpath expr='//sheet' position='inside'>
    	        	<div class='float-right'>
    	        		<button name="grab_payment_terms" string="Grab Terms" type="object" class='btn-success'/>
    	        	</div>
    	        </xpath>
    	    </field>
    	</record>


    	<record model='ir.ui.view' id='transaction_type_tree'>
    	    <field name='name'>transaction_type.tree</field>
    	    <field name='model'>transaction.type</field>
    	    <field name='arch' type='xml'>
    	        <tree string='description'>
    	            <field name='name'/>
    	            <field name="description"/>
    	        </tree>
    	    </field>
    	</record>

    	<record model="ir.ui.view" id="transaction_type_form">
    	    <field name="name">transaction_type.form</field>
    	    <field name="model">transaction.type</field>
    	    <field name="arch" type="xml">
    	        <form string="description">
    	            <sheet>
    	                <group>
    	                    <field name="name"/>
    	                    <field name="description"/>
    	                </group>
    	                <div class='float-right'>
    	                	<button name="grab_transaction_type" string="Grab Trx Type" type="object" class='btn-success'/>
    	                </div>
    	            </sheet>
    	        </form>
    	    </field>
    	</record>

    	<record id="action_transaction_type" model="ir.actions.act_window">
    		<field name="name">Transaction Type</field>
    		<field name="res_model">transaction.type</field>
    		<field name="view_mode">tree,form</field>
    	</record>

    	<menuitem id="transaction_type_menu" name="Transaction Type" parent="account.menu_finance_configuration" action="action_transaction_type"/>

    </data>
</odoo>
