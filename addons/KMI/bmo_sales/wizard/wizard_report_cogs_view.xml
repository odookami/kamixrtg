<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="wizard_report_cogs_form_view" model="ir.ui.view">
            <field name="name">wizard.report.cogs.form.view</field>
            <field name="model">wizard.report.cogs</field>
            <field name="arch" type="xml">
                <form string="Report COGS">
                    <group>
                        <label for="select_month" string="Period"/>
                        <div>
                            <field name="select_month" class="oe_inline" required="1"/>
                                    -
                            <field name="select_year" class="oe_inline" nolabel="1" required="1"/>
                        </div>
                    </group>
                    <group>
                        <field name="data_file" widget="binary" readonly="1" filename="name"/>
                        <field name="name" invisible="1"/>
                    </group>
                    <footer>
                        <button string='Export Excel' name="export_excel" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_report_cogs" model="ir.actions.act_window">
            <field name="name">Report COGS</field>
            <field name="res_model">wizard.report.cogs</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            id="report_cogs_menu_do_stuff"
            name="Report COGS"
            action="action_wizard_report_cogs"
            parent="sale.menu_sale_report"
            sequence="10" />

    </data>
</odoo>
